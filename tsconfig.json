{
  "compilerOptions": {
    "lib": ["ES6"],
    "isolatedModules": true,
    "module": "CommonJS",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
